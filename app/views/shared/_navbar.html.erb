<nav class="bg-gray-900 text-white border-b-2 border-gray-500">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center flex-row space-x-10">
        <div class="flex items-center space-x-2">
          <%= image_tag "gitForgeLogo.svg", alt: "GitForge Logo", class: "w-10 m-0" %>
          <span class="text-2xl font-bold"><a href="/" class="text-2xl font-bold">GitForge</a></span>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-6 font-semibold">
        <%= link_to "Docs", "#", class: "text-gray-300 hover:text-white" %>
        <%= link_to "Pricing", "#", class: "text-gray-300 hover:text-white" %>
        <%= link_to "GitForge Cloud", "#", class: "text-gray-300 hover:text-white" %>
      </div>
      
      </div>

      <!-- Auth Buttons -->
      <div class="hidden md:flex space-x-4 items-center font-semibold">
        <%= link_to "Sign In", "#", class: "text-gray-300 hover:text-white" %>
        <%= link_to "Get Started", "#", class: "bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded" %>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="focus:outline-none">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden px-4 pb-4 space-y-2">
    <%= link_to "Docs", "#", class: "block text-gray-300 hover:text-white" %>
    <%= link_to "Pricing", "#", class: "block text-gray-300 hover:text-white" %>
    <%= link_to "GitForge Cloud", "#", class: "block text-gray-300 hover:text-white" %>
    <%= link_to "Sign In", "#", class: "block text-gray-300 hover:text-white" %>
    <%= link_to "Get Started", "#", class: "block bg-yellow-500 hover:bg-yellow-600 text-black font-semibold py-2 px-4 rounded text-center" %>
  </div>
</nav>

<%= javascript_tag do %>
  document.addEventListener("DOMContentLoaded", function () {
    const button = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");

    if (button && menu) {
      button.addEventListener("click", () => {
        menu.classList.toggle("hidden");
      });
    }
  });
<% end %>
