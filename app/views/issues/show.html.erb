<div class="bg-gray-950 min-h-screen text-white p-6">
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb -->
    <div class="flex items-center text-sm text-gray-400 mb-4">
      <%= link_to "Issues", issues_path, class: "hover:text-white" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mx-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <span class="truncate"><%= @issue.title %></span>
    </div>
    
    <!-- Issue Header -->
    <div class="bg-gray-800 rounded-t-lg p-6">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold">
          <%= @issue.title %>
          <span class="text-gray-400 text-lg ml-2">#<%= @issue.id %></span>
        </h1>
        <div class="flex space-x-2">
          <% if @issue.open? %>
            <%= link_to close_issue_path(@issue), method: :patch, class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm font-medium" do %>
              Close Issue
            <% end %>
          <% else %>
            <%= link_to reopen_issue_path(@issue), method: :patch, class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md text-sm font-medium" do %>
              Reopen Issue
            <% end %>
          <% end %>
          
          <%= link_to edit_issue_path(@issue), class: "bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-md text-sm font-medium" do %>
            Edit
          <% end %>
        </div>
      </div>
      
      <div class="flex items-center mt-4">
        <div class="flex items-center">
          <% if @issue.open? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 mr-2">
              Open
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 mr-2">
              Closed
            </span>
          <% end %>
        </div>
        
        <div class="flex items-center text-sm text-gray-400">
          <span>
            <strong><%= @issue.user.username %></strong> opened this issue <%= time_ago_in_words(@issue.created_at) %> ago
          </span>
        </div>
      </div>
      
      <div class="mt-2 text-sm">
        <span class="text-gray-400">Repository: </span>
        <%= link_to @repository.name, main_app.user_repository_path(@repository.user.username, @repository.slug), class: "text-yellow-500 hover:underline" %>
      </div>
    </div>
    
    <!-- Issue Description -->
    <div class="bg-gray-800 border-t border-gray-700 p-6">
      <div class="flex items-start space-x-3">
        <% if @issue.user.avatar.attached? %>
          <%= image_tag @issue.user.avatar, class: "w-10 h-10 rounded-full" %>
        <% else %>
          <div class="w-10 h-10 rounded-full bg-yellow-500 flex items-center justify-center">
            <span class="text-gray-900 font-bold"><%= @issue.user.username[0].upcase %></span>
          </div>
        <% end %>
        
        <div class="flex-1 bg-gray-700 rounded-lg p-4">
          <div class="prose prose-invert max-w-none">
            <% if @issue.description.present? %>
              <%= simple_format @issue.description %>
            <% else %>
              <p class="text-gray-400 italic">No description provided.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Actions Footer -->
    <div class="bg-gray-800 rounded-b-lg border-t border-gray-700 p-6">
      <div class="flex justify-between">
        <%= link_to issues_path, class: "text-gray-400 hover:text-white flex items-center" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Issues
        <% end %>
        
        <%= link_to issue_path(@issue), method: :delete, data: { confirm: "Are you sure you want to delete this issue?" }, class: "text-red-500 hover:text-red-400 flex items-center" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete Issue
        <% end %>
      </div>
    </div>
  </div>
</div> 