<!-- Repository Page Main Content Section -->
<div class="min-h-screen bg-gray-950 text-white">
  <!-- Repository Header -->
  <div class="border-b border-gray-800 bg-gray-900">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold">
            <%= link_to @user.username, user_path(@user.username), class: "text-gray-400 hover:text-white" %> /
            <span class="text-white"><%= @repository.name %></span>
          </h1>
          <p class="text-gray-400 mt-1"><%= @repository.description %></p>
        </div>
        <% if current_user == @user %>
          <div class="flex space-x-4">
            <%= link_to "Edit", edit_repository_path(@repository), class: "px-4 py-2 border border-gray-700 rounded-md hover:bg-gray-800" %>
            <%= button_to "Sync", sync_repository_path(@repository), method: :post, class: "px-4 py-2 bg-yellow-500 text-black rounded-md hover:bg-yellow-600" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-12 gap-8">
      <!-- File Browser -->
      <div class="col-span-3">
        <div class="bg-gray-900 rounded-lg border border-gray-800">
          <div class="p-4 border-b border-gray-800">
            <h2 class="font-semibold">Files</h2>
          </div>
          <div class="p-4">
            <%= render partial: "file_tree", collection: @files, as: :file %>
          </div>
        </div>
      </div>

      <!-- README Preview -->
      <div class="col-span-9">
        <div class="bg-gray-900 rounded-lg border border-gray-800">
          <div class="p-4 border-b border-gray-800">
            <h2 class="font-semibold">
              <%= @readme ? @readme.name : "# #{@repository.name}" %>
            </h2>
          </div>
          <div class="p-4 prose prose-invert max-w-none">
            <% if @readme %>
              <% if @readme.content.present? %>
                <%= markdown(@readme.content) %>
              <% else %>
                <div class="text-gray-400">
                  <p>Unable to load README content. The file might be empty or there might be an issue accessing it.</p>
                </div>
              <% end %>
            <% else %>
              <div class="text-gray-400">
                <h1><%= @repository.name %></h1>
                <p>No README.md found. Add a README.md file to your repository to provide information about your project.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
