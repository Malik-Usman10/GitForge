<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gray-950">
  <div class="max-w-2xl w-full space-y-8 bg-gray-900 p-8 rounded-lg border border-gray-700">
    <div>
      <h2 class="text-center text-3xl font-bold text--500 text-yellow-500">Create a new repository</h2>
      <p class="mt-2 text-center text-sm text-gray-400">
        A repository contains your project files, including the revision history.
      </p>
    </div>
    <% if @repository.errors.any? %>
      <div class="text-red-400">
        <ul>
          <% @repository.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <%= form_with model: @repository, url: repositories_path, local: true, class: "mt-8 space-y-6" do |f| %>
      
      <!-- Repository Name -->
      <div>
        <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-300" %>
        <div class="mt-1">
          <%= f.text_field :name, required: true, placeholder: "repository-name", class: "form-input appearance-none block w-full px-3 py-2 rounded-md shadow-sm focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm bg-gray-800 text-white" %>
        </div>
        <p class="mt-1 text-xs text-gray-400">Great repository names are short and memorable.</p>
      </div>

      <!-- Description -->
      <div>
        <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-300" %>
        <div class="mt-1">
          <%= f.text_area :description, rows: 3, placeholder: "What is this repository for?", class: "form-textarea appearance-none block w-full px-3 py-2 rounded-md shadow-sm focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm bg-gray-800 text-white" %>
        </div>
      </div>

      <!-- Visibility -->
      <div>
        <%= f.label :visibility, "Visibility", class: "block text-sm font-medium text-gray-300" %>
        <div class="mt-2 space-y-3">
          <div class="radio-container flex items-start p-4 rounded-md cursor-pointer bg-gray-800">
            <div class="flex items-center h-5">
              <%= f.radio_button :visibility, "is_public", checked: true, id: "public", class: "h-4 w-4 text-yellow-500 focus:ring-yellow-500 border-gray-600 bg-gray-800" %>
            </div>
            <div class="ml-3 text-sm">
              <label for="public" class="font-medium text-gray-300 cursor-pointer">Public</label>
              <p class="text-gray-400">Anyone on the internet can see this repository. You choose who can commit.</p>
            </div>
          </div>

          <div class="radio-container flex items-start p-4 rounded-md cursor-pointer bg-gray-800">
            <div class="flex items-center h-5">
              <%= f.radio_button :visibility, "is_private", id: "private", class: "h-4 w-4 text-yellow-500 focus:ring-yellow-500 border-gray-600 bg-gray-800" %>
            </div>
            <div class="ml-3 text-sm">
              <label for="private" class="font-medium text-gray-300 cursor-pointer">Private</label>
              <p class="text-gray-400">You choose who can see and commit to this repository.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Language -->
      <div>
        <%= f.label :language, "Primary language", class: "block text-sm font-medium text-gray-300" %>
        <div class="mt-1 bg-gray-800">
          <%= f.select :language,
                       ["JavaScript", "Python", "Ruby", "Java", "Go", "TypeScript", "C++", "PHP", "C#", "HTML", "CSS", "Shell", "Rust"],
                       { prompt: "Select a language" },
                       class: "form-select appearance-none block w-full px-3 py-2 rounded-md shadow-sm focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm text-white bg-gray-800 [&>option]:bg-gray-800 [&>option]:text-white" %>
        </div>
      </div>

      <!-- Submit -->
      <div class="pt-5">
        <div class="flex justify-end">
          <%= f.submit "Create repository", class: "ml-3 inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
