<div class="min-h-screen bg-gray-950 text-gray-300">
  <div class="flex-1 px-4 sm:px-6 lg:px-8 overflow-y-auto">
    <div class="py-6">
      <div class="flex items-center space-x-4">
        <div class="h-20 w-20 rounded-full bg-gray-700 flex items-center justify-center">
          <span class="text-2xl font-bold text-yellow-500"><%= @user.username[0].upcase %></span>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-white"><%= @user.username %></h1>
          <p class="text-gray-400">Member since <%= @user.created_at.strftime("%B %Y") %></p>
        </div>
      </div>
    </div>

    <!-- Public Repositories -->
    <div class="mt-8">
      <h2 class="text-xl font-bold text-white mb-4">Public Repositories</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @repositories.each do |repo| %>
          <div class="bg-gray-800 rounded-lg p-5 hover:border hover:border-yellow-500 transition-all">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-lg font-medium">
                  <%= link_to repo.name, user_repository_path(repo.user.username, repo.slug), class: "text-yellow-500 hover:underline" %>
                </h3>
                <p class="text-gray-400 text-sm mt-1"><%= repo.description.presence || "No description provided." %></p>
              </div>
              <div>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-900 text-blue-300">
                  <%= repo.visibility.capitalize %>
                </span>
              </div>
            </div>

            <div class="mt-4 flex items-center text-sm text-gray-400">
              <% if repo.language.present? %>
                <span class="flex items-center mr-4">
                  <span class="w-3 h-3 rounded-full bg-yellow-500 mr-1"></span>
                  <%= repo.language %>
                </span>
              <% end %>
            </div>

            <div class="mt-4 text-xs text-gray-500">
              Updated <%= time_ago_in_words(repo.updated_at) %> ago
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 