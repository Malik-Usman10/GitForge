<div class="min-h-screen flex items-center justify-center bg-[#0d1117] px-4">
  <div class="bg-transparent backdrop-blur-2xl backdrop-brightness-150 text-white rounded-xl shadow-lg w-full max-w-4xl p-8 md:p-12 flex flex-col md:flex-row gap-8">
    
    <!-- Left: Branding -->
    <div class="md:w-1/2 flex flex-col justify-center">
      <h2 class="text-3xl font-bold mb-2">Welcome to GitForge</h2>
      <p class="text-md text-gray-400 mb-6">Forge your code. Own your platform.</p>
      <img src="<%= asset_path("login_art.png") %>" alt="Welcome" class="rounded-lg shadow-lg" />
    </div>

    <!-- Right: Form -->
    <div class="md:w-1/2">
      <div class="flex justify-around border-b border-gray-700 mb-4 pb-2 text-sm">
        <%= link_to "Sign In", new_session_path(resource_name), class: "text-gray-400 hover:text-white font-semibold text-lg" %>
        <span class="border-b-2 border-yellow-500 text-white text-lg font-semibold">Sign Up</span>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-sm mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 bg-gray-900 text-white border border-gray-700 rounded" %>
          <p class="text-xs text-gray-400 mt-1">You will receive a confirmation email. Please use a real email address.</p>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm mb-1" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 bg-gray-900 text-white border border-gray-700 rounded mt-1" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 bg-gray-900 text-white border border-gray-700 rounded" %>
        </div>

        <div>
          <%= f.submit "Sign Up", class: "w-full bg-yellow-500 hover:bg-yellow-600 text-black font-semibold py-2 rounded" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
