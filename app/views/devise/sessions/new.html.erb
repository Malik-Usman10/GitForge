<div class="min-h-screen flex items-center justify-center bg-[#0d1117] px-4">
  <div class="max-w-4xl w-full bg-transparent backdrop-blur-2xl backdrop-brightness-150 rounded-xl shadow-lg flex overflow-hidden text-white">
    
    <!-- Left Side: Welcome and Illustration -->
    <div class="w-1/2 p-8 flex flex-col justify-center bg-transparent backdrop-blur-2xl backdrop-brightness-150">
      <h2 class="text-3xl font-bold mb-2">Welcome to GitForge</h2>
      <p class="text-md text-gray-400 mb-6">Forge your code. Own your platform.</p>
      <img src="<%= asset_path("login_art.png") %>" alt="Illustration" class="rounded-lg">
    </div>

    <!-- Right Side: Login Form -->
    <div class="w-1/2 p-8">
      <div class="flex justify-around items-center mb-6 border-b border-gray-600 pb-2">
        <h3 class="text-lg font-semibold border-b-2 border-yellow-500 pb-1">Sign In</h3>
        <%= link_to "Sign Up", new_user_registration_path, class: "text-lg text-gray-400 hover:text-white font-semibold" %>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <div>
          <%= f.label :email, class: "text-sm block mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded bg-gray-900 border border-gray-700 focus:outline-none" %>
        </div>

        <div>
          <%= f.label :password, class: "text-sm block mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 rounded bg-gray-900 border border-gray-700 focus:outline-none" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between text-sm text-gray-400">
            <div>
              <%= f.check_box :remember_me, class: "mr-1" %>
              <%= f.label :remember_me %>
            </div>
            <%= link_to "Forgot Password?", new_user_password_path, class: "text-yellow-500 hover:underline" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign In", class: "w-full py-2 bg-yellow-500 hover:bg-yellow-600 rounded text-black font-semibold transition" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
